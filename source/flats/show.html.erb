<% flat = data.flats[owner] %>

<div style=" background-image: url(https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug%>)" class="img-banner">
</div>
<div class="wrapper-white">
  <div class="container">
    <div class="row">
      <div class="flat-info col-xs-12 col-sm-4 col-sm-offset-2">
        <div class="owner-info">
          <img src="https://kitt.lewagon.com/placeholder/users/<%= owner%>" alt="<%= owner%>" class="avatar">
          <p><%= owner %></p>
        </div>
        <div class="flat-recap">
          <h3><%= flat.name %></h3>
          <p><%= flat.city_name%></p>
          <% flat.rating.to_i.times do %>
          <i class="fa fa-star"></i>
          <% end %>
        </div>
        </div>
        <div class="booking  col-xs-12 col-sm-4">
          <h2>Book this flat</h2>
          <form action="">
            <div class="check form-group">
            <input type="text" placeholder="Checkin">
            <input type="text" placeholder="Checkout">

            </div>
            <select name="guest" id="" class="form-group">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
            <input type="submit" value="Book it" class="btn btn-danger btn-form">
          </form>
        </div>
</div>

  </div>
</div>

